@{
    string? text = Convert.ToString(TempData["CaptchaMessage.Text"]);
    string? cssClass = string.Format("alert alert-{0} alert-dismissible fade show", Convert.ToString(TempData["CaptchaMessage.Type"]));
}

@if (!string.IsNullOrWhiteSpace(text))
{
    <div class="@cssClass my-3" role="alert">
        <p class="mb-0">@text</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
